<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Fragment Goes Here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="10">
            <ImageButton android:id="@+id/searchPageBtn"
                android:onClick="loadSearchPage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:src="@drawable/search"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"
                android:visibility="visible"
                /><!-- make active versions -->
            <ImageButton android:id="@+id/favouriteListBtn"
                android:onClick="loadFavouritePage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:src="@drawable/star"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <TextView android:id="@+id/gameName"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="@string/gameNamePrompt"/>

        <Button android:id="@+id/favouriteBtn"
            android:onClick="addGameToFavourites"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="@string/addToFavourites"
            android:layout_marginBottom="15dp"/>

        <ListView
            android:id="@+id/navDrawer"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp">
        </ListView>

    </LinearLayout>




</android.support.v4.widget.DrawerLayout>
