<resources>
    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>

    </style>

    <!-- Bottom ImageButtons -->
    <style name="ImageButtonTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Drawer Items -->
    <style name="drawerTextTheme">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">10</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Favourite Common Styles -->
    <style name="favouriteGameTheme">
        <item name="android:layout_weight">50</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <!-- Progress Bar -->
    <style name="progressBarTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:max">100</item>
    </style>

    <!-- Run List Headers -->
    <style name="runListHeaderTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
